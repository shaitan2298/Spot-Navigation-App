<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_themed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pramendra.spotnavigation.Themed">
    <TextView android:id="@+id/txtFirst" android:layout_height="wrap_content" android:layout_width="wrap_content"
              android:text="@string/app_name" android:layout_marginBottom="15sp"/>
    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"/>
    <Spinner
        android:id="@+id/spnCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"></Spinner>
    <CheckBox
        android:id="@+id/chkGen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kanpur"
        android:layout_marginBottom="15sp"/>
    <CheckBox
        android:id="@+id/chkGen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lucknow"
        android:layout_marginBottom="15sp"/>
    <Button
        android:id="@+id/mybut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Me"
        android:textAlignment="center"/>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:src="@drawable/common_google_signin_btn_icon_dark_normal"
        app:layout_anchor="@id/mybut"
        app:layout_anchorGravity="bottom|end" />
</LinearLayout>
